<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true">

    <ImageView
        android:id="@+id/custom_small_poster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="Люди X"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/custom_small_poster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameRu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="0.00"
        app:layout_constraintBottom_toBottomOf="@+id/custom_small_poster"
        app:layout_constraintStart_toStartOf="@+id/custom_small_poster" />
</androidx.constraintlayout.widget.ConstraintLayout>